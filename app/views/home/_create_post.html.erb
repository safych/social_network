<%= form_with(model: @post, local: true, url: posts_path, method: :post) do |f| %>
  <% flash.each do |key, value| %>
    <div class="flash <%= key %>" style="<%= key == 'done' ? 'color: #3c763d;' : 'color: red;' %>">
      <%= value %>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :title, t("post_title") %><br />
    <%= f.text_field :title, autofocus: true %>
  </div>
  
  <div class="field">
    <%= f.label :description, t("post_description") %><br />
    <%= f.text_area :description, autofocus: true, size: '50x10' %>
  </div>

  <div class="field">
    <%= f.label :avatar, t("avatar") %><br />
    <%= f.file_field :avatar %>
  </div>

  <div class="actions">
    <%= f.submit t("create_post") %>
  </div>
<% end %>