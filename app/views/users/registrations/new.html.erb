<h2>Sign up</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= render "users/shared/error_messages", resource: resource %>

  <div class="field">
    <%= f.label :email, t("user.registration.email") %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
  </div>

  <div class="field">
    <%= f.label :phone, t("user.registration.phone") %><br />
    <%= f.telephone_field :phone, autofocus: true, autocomplete: "phone" %>
  </div>

  <div class="field">
    <%= f.label :name, t("user.registration.name") %><br />
    <%= f.text_field :name, autofocus: true, autocomplete: "name" %>
  </div>

  <div class="field">
    <%= f.label :surname, t("user.registration.surname") %><br />
    <%= f.text_field :surname, autofocus: true, autocomplete: "surname" %>
  </div>

  <div class="field">
    <%= f.label :username, t("user.registration.username") %><br />
    <%= f.text_field :username, autofocus: true, autocomplete: "username" %>
  </div>

  <div class="field">
    <%= f.label :gender, t("user.registration.gender") %><br />
    <%= f.radio_button :gender, "man" %>
    <%= f.label :gender, t("user.registration.man") %>
    <%= f.radio_button :gender, "woman" %>
    <%= f.label :gender, t("user.registration.woman") %>
  </div>

  <div class="field">
    <%= f.label :born_on, t("user.registration.born_on") %><br />
    <%= f.date_field :born_on, value: Date.today %>
  </div>

  <div class="field">
    <%= f.label :password, t("user.registration.password") %>
    <% if @minimum_password_length %>
    <em>(<%= @minimum_password_length %> characters minimum)</em>
    <% end %><br />
    <%= f.password_field :password, autocomplete: "new-password" %>
  </div>

  <div class="field">
    <%= f.label :password_confirmation, t("user.registration.password_confirm") %><br />
    <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
  </div>

  <div class="actions">
    <%= f.submit "Sign up" %>
  </div>
<% end %>

<%= render "users/shared/links" %>
